<div class="container mt-4">
  <h1 class="mb-4">All Bookings</h1>

  <div class="table-responsive">
    <table class="table">
      <thead class="table-light">
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Animal Name</th>
          <th scope="col">Animal Type</th>
          <th scope="col">Hours Requested</th>
          <th scope="col">Date of Service</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.first_name %></td>
            <td><%= booking.last_name %></td>
            <td><%= booking.animal_name %></td>
            <td><%= booking.animal_type.capitalize %></td>
            <td><%= booking.hours_requested %></td>
            <td><%= booking.date_of_service.strftime("%B %d, %Y") %></td>
            <td>$<%= booking.calculate_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
