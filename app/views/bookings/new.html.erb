<h1>New Booking</h1>

<%= form_with model: @booking, local: true, html: { class: "booking-form" } do |form| %>

  <div class="form-group">
    <%= form.label :first_name, "First Name" %><br>
    <%= form.text_field :first_name, class: "form-control#{' is-invalid' if @booking.errors[:first_name].any?}" %>
    <% if @booking.errors[:first_name].any? %>
      <div class="field-error">First name <%= @booking.errors[:first_name].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Last Name" %><br>
    <%= form.text_field :last_name, class: "form-control#{' is-invalid' if @booking.errors[:last_name].any?}" %>
    <% if @booking.errors[:last_name].any? %>
      <div class="field-error">Last name <%= @booking.errors[:last_name].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :animal_name, "Animal Name" %><br>
    <%= form.text_field :animal_name, class: "form-control#{' is-invalid' if @booking.errors[:animal_name].any?}" %>
    <% if @booking.errors[:animal_name].any? %>
      <div class="field-error">Animal name <%= @booking.errors[:animal_name].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :animal_type, "Animal Type" %><br>
    <%= form.select :animal_type, ['Dog', 'Cat'], {}, { class: "form-control#{' is-invalid' if @booking.errors[:animal_type].any?}" } %>
    <% if @booking.errors[:animal_type].any? %>
      <div class="field-error">Animal type <%= @booking.errors[:animal_type].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :hours_requested, "Hours Requested" %><br>
    <%= form.number_field :hours_requested, in: 2..8, class: "form-control#{' is-invalid' if @booking.errors[:hours_requested].any?}" %>
    <% if @booking.errors[:hours_requested].any? %>
      <div class="field-error">Hours requested <%= @booking.errors[:hours_requested].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_service, "Date of Service" %><br>
    <%= form.date_field :date_of_service, class: "form-control#{' is-invalid' if @booking.errors[:date_of_service].any?}" %>
    <% if @booking.errors[:date_of_service].any? %>
      <div class="field-error">Date of service <%= @booking.errors[:date_of_service].first %></div>
    <% end %>
  </div>

  <div class="form-actions">
    <%= form.submit "Book Now", class: "submit-button" %>
  </div>
<% end %>
